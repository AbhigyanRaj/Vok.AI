# Vok.AI Backend Environment Variables

# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vokai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Twilio Configuration (Required for voice calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# OpenAI/Gemini Configuration (Required for AI evaluation)
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs Configuration (Optional - for voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Webhook Configuration
BASE_URL=http://localhost:5001
NGROK_URL=https://your-ngrok-url.ngrok.io

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Call Configuration
MAX_CALL_DURATION=120
CALL_TIMEOUT=8
SPEECH_TIMEOUT=15

# Token Configuration
TOKENS_PER_CALL=5
INITIAL_TOKEN_BALANCE=100
